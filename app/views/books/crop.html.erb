<h1>Crop Cover</h1>

<%= image_tag @book.cover_url, id: "jcrop_target" %>

<%= simple_form_for @book, url: update_crop_book_path(@book), html: { id: "coords" } do |f| %>
<% %w[x y w h].each do |attr| %>
  <%= f.input "crop_#{attr}" %>
<% end %>
  <div class="form-actions">
    <%= f.submit "Crop cover" %>
  </div>
<% end %>

<p>
  <%= link_to 'Show', @book %> |
  <%= link_to 'Back', books_path %>
</p>

<%= javascript_include_tag 'crop' %>
